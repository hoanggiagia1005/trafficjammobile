<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/edt_start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:hint="Điểm xuất phát ..."
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/edt_end"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edt_start"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/border"
        android:hint="Nhập điểm đến ..."
        android:paddingLeft="20dp" />

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:padding="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Di chuyển để chọn vị trí"
            android:background="@drawable/border_select"
            android:textColor="#ffffff"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/location" />
    </LinearLayout>

</RelativeLayout>